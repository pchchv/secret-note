{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "sourceMap": true,
      "lib": ["es2015"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
    },
    "include": ["src/**/*"]
  }